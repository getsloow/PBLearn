@model FileUpload

<form asp-action="Index" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FileName"></label>
        <input asp-for="FileName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Data"></label>
        <input asp-for="Data" type="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>


@if (User.IsInRole("Teacher"))
{
    <div class="form-group">
        <label for="userId">Select User:</label>
        @Html.DropDownListFor(m => m.ContentType, (IEnumerable<SelectListItem>)ViewBag.UserList, "-- Select User --", new { @class = "form-control" })
    </div>

}

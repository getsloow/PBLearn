@model AssignmentModel

<h1>@Model.Name</h1>

<p><strong>Due Date:</strong> @Model.DueDate.ToShortDateString()</p>
<p><strong>Is Completed:</strong> @(Model.IsCompleted ? "Yes" : "No")</p>
<p><strong>Project:</strong> @Model.Project.Name</p>

@* Add any additional properties you want to display here *@

<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
<a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
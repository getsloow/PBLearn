@{
}
@model ProjectDetailsViewModel

<h1>@Model.ProjectName</h1>

<p><strong>Start Date:</strong> @Model.ProjectStartDate.ToShortDateString()</p>
<p><strong>End Date:</strong> @Model.ProjectEndDate.ToShortDateString()</p>



@if (Model?.Assignments?.Count > 0)
{
    <h2>Assignments:</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Due Date</th>
                <th>Completed</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var assignment in Model.Assignments)
            {
                <tr>
                    <td>@assignment.AssignmentName</td>
                    <td>@assignment.AssignmentDueDate.ToShortDateString()</td>
                    <td>@(assignment.AssignmentIsCompleted ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No assignments found.</p>
}
